<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.romao.nhlspider">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".NhlSpiderApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_nhl_puck"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".BootActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.overview.GamesOverviewActivity">
        </activity>

        <activity android:name=".ui.game.summary.GameSummaryActivity">
        </activity>

    </application>

</manifest>