<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <style name="TextAppearance" parent="TextAppearance.AppCompat">
    </style>

    <style name="TextAppearance.TeamName" parent="TextAppearance">
        <item name="font">fonts/Roboto-Bold.ttf</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="TextAppearance.TeamGoals" parent="TextAppearance">
        <item name="font">fonts/Roboto-Bold.ttf</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="TextAppearance.Attendance" parent="TextAppearance">
        <item name="font">fonts/Roboto-Bold.ttf</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#E0000000</item>
    </style>

    <style name="TextAppearance.GameDayDate" parent="TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="font">fonts/Roboto-Medium.ttf</item>
        <item name="android:background">@drawable/drawable_bg_button_transparent</item>
    </style>

    <style name="TextAppearance.GamePeriod" parent="TextAppearance">
        <item name="android:textColor">@color/textColorAlert</item>
        <item name="android:textSize">18sp</item>
        <item name="font">fonts/Roboto-Bold.ttf</item>
    </style>

    <style name="TextAppearance.GameTimeRemaining" parent="TextAppearance">
        <item name="android:textColor">@color/textColorAlert</item>
        <item name="android:textSize">12sp</item>
        <item name="font">fonts/Roboto-Bold.ttf</item>
    </style>

    <style name="Button.Transparent" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/drawable_bg_button_transparent</item>
    </style>
</resources>
